{
  "name": "videojs-hls-quality-selector",
  "version": "1.1.4",
  "description": "Adds a quality selector menu for HLS sources played in videojs.  Requires `videojs-contrib-hls` and videojs-contrib-quality-levels plugins.",
  "main": "dist/videojs-hls-quality-selector.cjs.js",
  "module": "dist/videojs-hls-quality-selector.es.js",
  "generator-videojs-plugin": {
    "version": "8.0.0"
  },
  "repository": "https://github.com/chrisboustead/videojs-hls-quality-selector.git",
  "scripts": {
    "build": "npm-run-all -s clean -p build:*",
    "build-prod": "cross-env-shell NO_TEST_BUNDLE=1 'npm run build'",
    "build-test": "cross-env-shell TEST_BUNDLE_ONLY=1 'npm run build'",
    "build:css": "npm-run-all build:css:sass build:css:bannerize",
    "build:css:bannerize": "bannerize dist/videojs-hls-quality-selector.css --banner=scripts/banner.ejs",
    "build:css:sass": "sass src/plugin.scss dist/videojs-hls-quality-selector.css --style=compressed",
    "build:js": "npm-run-all build:js:rollup build:js:bannerize",
    "build:js:bannerize": "bannerize dist/videojs-hls-quality-selector.js --banner=scripts/banner.ejs",
    "build:js:rollup": "rollup -c scripts/rollup.config.js",
    "clean": "shx rm -rf ./dist ./test/dist && shx mkdir -p ./dist ./test/dist",
    "docs": "npm-run-all docs:*",
    "docs:api": "jsdoc src -r -d docs/api",
    "docs:toc": "doctoc --notitle README.md",
    "lint": "vjsstandard",
    "server": "karma start scripts/karma.conf.js --singleRun=false --auto-watch",
    "start": "npm-run-all -p server watch",
    "test": "npm-run-all lint build-test && karma start scripts/karma.conf.js",
    "posttest": "shx cat test/dist/coverage/text.txt",
    "update-changelog": "conventional-changelog -p videojs -i CHANGELOG.md -s",
    "preversion": "npm test",
    "version": "is-prerelease || npm run update-changelog && git add CHANGELOG.md",
    "watch": "npm-run-all -p watch:*",
    "watch:css": "npm run build:css -- -w",
    "watch:js": "npm run build:js -- -w",
    "prepublishOnly": "npm-run-all build-prod && vjsverify --verbose"
  },
  "engines": {
    "node": ">=14",
    "npm": ">=6"
  },
  "keywords": [
    "videojs",
    "videojs-plugin"
  ],
  "author": "Chris Boustead (chris@forgemotion.com)",
  "license": "MIT",
  "vjsstandard": {
    "ignore": [
      "dist",
      "docs",
      "test/dist"
    ]
  },
  "files": [
    "CONTRIBUTING.md",
    "dist/",
    "docs/",
    "index.html",
    "scripts/",
    "src/",
    "test/"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.js": "vjsstandard --fix",
    "README.md": "doctoc --notitle"
  },
  "dependencies": {
    "global": "^4.4.0",
    "video.js": "^7.5.5",
    "videojs-contrib-quality-levels": "^2.0.9"
  },
  "devDependencies": {
    "@babel/runtime": "^7.14.0",
    "@videojs/generator-helpers": "~2.0.2",
    "bannerize": "^1.1.4",
    "jsdoc": "~3.6.6",
    "karma": "^6.3.2",
    "rollup": "^2.46.0",
    "sass": "^1.49.0",
    "sinon": "^9.1.0",
    "videojs-generate-karma-config": "~8.0.0",
    "videojs-generate-rollup-config": "~6.2.0",
    "videojs-generator-verify": "~3.0.3",
    "videojs-standard": "^8.0.4"
  }
}
